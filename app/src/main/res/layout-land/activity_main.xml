<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#1C1C1C"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:orientation="vertical"
        android:weightSum="7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:layout_width="645dp"
                android:layout_height="match_parent"
                android:text="Standard"
                android:textColor="#FFFFFF"
                android:textSize="25dp" />
            <ImageButton
                android:layout_width="35dp"
                android:layout_height="30dp"
                android:background="@android:color/transparent"
                android:src="@drawable/history"
                android:onClick="lichsu"
                />
        </LinearLayout>
        <TextView
            android:layout_weight="1"
            android:id="@+id/expressionView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            android:textColor="#FFFFFF"
            android:textSize="25dp" />

        <TextView
            android:layout_weight="1"
            android:id="@+id/resultView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textAlignment="textEnd"
            android:textColor="#FFFFFF"
            android:textSize="32dp" />

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="8">

            <Button
                android:id="@+id/buttonLeftBrack"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:background="@drawable/black_circle_button_horizontal"
                android:onClick="buttonLeftBrack"
                android:text="\u0028"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonRightBrack"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:background="@drawable/black_circle_button_horizontal"
                android:onClick="buttonRightBrack"
                android:text="\u0029"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonStage"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:background="@drawable/black_circle_button_horizontal"
                android:onClick="buttonStage"
                android:text="\u0021"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button7"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:background="@drawable/gray_circle_button_horizontal"
                android:onClick="onNumberButtonClick"
                android:text="7"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button8"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:background="@drawable/gray_circle_button_horizontal"
                android:onClick="onNumberButtonClick"
                android:text="8"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button9"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:background="@drawable/gray_circle_button_horizontal"
                android:onClick="onNumberButtonClick"
                android:text="9"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonDel"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:background="@drawable/orange_circle_button_horizontal"
                android:onClick="buttonC"
                android:text="C"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonAC"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:background="@drawable/orange_circle_button_horizontal"
                android:onClick="buttonAC"
                android:text="AC"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="8">

            <Button
                android:id="@+id/buttonPi"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:background="@drawable/black_circle_button_horizontal"
                android:onClick="buttonPi"
                android:text="\u03A0"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonExpon"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:background="@drawable/black_circle_button_horizontal"
                android:onClick="buttonExpone"
                android:text="Ë„"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonSqrt"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:background="@drawable/black_circle_button_horizontal"
                android:onClick="buttonSqrt"
                android:text="\u221A"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button4"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:background="@drawable/gray_circle_button_horizontal"
                android:onClick="onNumberButtonClick"
                android:text="4"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button5"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:background="@drawable/gray_circle_button_horizontal"
                android:onClick="onNumberButtonClick"
                android:text="5"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button6"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:background="@drawable/gray_circle_button_horizontal"
                android:onClick="onNumberButtonClick"
                android:text="6"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonCE"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:background="@drawable/orange_circle_button_horizontal"
                android:onClick="buttonCE"
                android:text="CE"
                android:textAlignment="gravity"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonAdd"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:background="@drawable/orange_circle_button_horizontal"
                android:onClick="onOperatorButtonClick"
                android:text="+"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />


        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="8">

            <Button
                android:id="@+id/buttonSin"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/black_circle_button_horizontal"
                android:onClick="buttonSin"
                android:text="Sin"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonCos"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:background="@drawable/black_circle_button_horizontal"
                android:onClick="buttonCos"
                android:text="Cos"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonPer"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:background="@drawable/black_circle_button_horizontal"
                android:onClick="buttonPercent"
                android:text="%"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button1"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:background="@drawable/gray_circle_button_horizontal"
                android:onClick="onNumberButtonClick"
                android:text="1"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:background="@drawable/gray_circle_button_horizontal"
                android:onClick="onNumberButtonClick"
                android:text="2"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:background="@drawable/gray_circle_button_horizontal"
                android:onClick="onNumberButtonClick"
                android:text="3"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonSub"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:background="@drawable/orange_circle_button_horizontal"
                android:onClick="onOperatorButtonClick"
                android:text="\u002d"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonMul"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:background="@drawable/orange_circle_button_horizontal"
                android:onClick="onOperatorButtonClick"
                android:text="\u00D7"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />



        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="8">

            <Button
                android:textSize="20sp"
                android:layout_weight="1"
                android:id="@+id/buttonCot"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:background="@drawable/black_circle_button_horizontal"
                android:text="cot"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/buttonTan"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:background="@drawable/black_circle_button_horizontal"
                android:onClick="buttonTan"
                android:text="tan"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <Button
                android:textSize="20sp"
                android:layout_weight="1"
                android:id="@+id/buttonAns"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/black_circle_button_horizontal"
                android:text="ANS"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/buttonMinus"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:background="@drawable/gray_circle_button_horizontal"
                android:onClick="onOperatorButtonClick"
                android:text="\u00b1"
                android:textAlignment="gravity"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button0"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:background="@drawable/gray_circle_button_horizontal"
                android:onClick="onNumberButtonClick"
                android:text="0"
                android:textAlignment="gravity"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonDot"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:background="@drawable/gray_circle_button_horizontal"
                android:onClick="buttonDot"
                android:text="."
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonEqual"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:background="@drawable/orange_circle_button_horizontal"
                android:onClick="onResultClick"
                android:text="="
                android:textAlignment="gravity"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonDiv"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:background="@drawable/orange_circle_button_horizontal"
                android:onClick="onOperatorButtonClick"
                android:text="\u00f7"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>